<section id="reservation" class="relative overflow-hidden py-16 lg:py-24">
  <div class="pointer-events-none absolute inset-0 bg-radial-copper" />
  <div class="mx-auto max-w-6xl px-4 lg:px-6">
    <div class="reveal grid gap-10 lg:grid-cols-2">
      <div>
        <p class="kicker">RESERVATION</p>
        <h2 class="mt-3 font-display text-2xl font-semibold text-paper-50 sm:text-3xl">Reserve your table</h2>
        <p class="mt-2 max-w-xl text-sm text-paper-100/70 sm:text-base">
          This is a placeholder form for the landing page. Hook it to WhatsApp, email, or your reservation system later.
        </p>

        <div class="mt-8 rounded-3xl border border-paper-100/10 bg-pine-950/25 p-6 backdrop-blur-md">
          <div class="grid gap-4 text-sm text-paper-100/75">
            <div class="flex items-center justify-between">
              <span>Phone</span>
              <span class="text-paper-50">+880 1XXXXXXXXX</span>
            </div>
            <div class="flex items-center justify-between">
              <span>Location</span>
              <span class="text-paper-50">Your City, Bangladesh</span>
            </div>
            <div class="flex items-center justify-between">
              <span>Hours</span>
              <span class="text-paper-50">Daily 12:00â€“12:00</span>
            </div>
          </div>
        </div>
      </div>

      <form id="reserveForm" class="reveal rounded-3xl border border-paper-100/10 bg-pine-950/25 p-6 backdrop-blur-md">
        <div class="grid gap-4 sm:grid-cols-2">
          <label class="grid gap-2">
            <span class="text-xs text-paper-100/60">Full name</span>
            <input required name="name" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 placeholder:text-paper-100/35 focus:border-copper-400/40" placeholder="Your name" />
          </label>
          <label class="grid gap-2">
            <span class="text-xs text-paper-100/60">Phone</span>
            <input required name="phone" inputmode="tel" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 placeholder:text-paper-100/35 focus:border-copper-400/40" placeholder="01XXXXXXXXX" />
          </label>
          <label class="grid gap-2">
            <span class="text-xs text-paper-100/60">Date</span>
            <input required name="date" type="date" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 focus:border-copper-400/40" />
          </label>
          <label class="grid gap-2">
            <span class="text-xs text-paper-100/60">Time</span>
            <input required name="time" type="time" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 focus:border-copper-400/40" />
          </label>
          <label class="grid gap-2 sm:col-span-2">
            <span class="text-xs text-paper-100/60">Guests</span>
            <select name="guests" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 focus:border-copper-400/40">
              <option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7+</option>
            </select>
          </label>
          <label class="grid gap-2 sm:col-span-2">
            <span class="text-xs text-paper-100/60">Notes (optional)</span>
            <textarea name="notes" rows="4" class="rounded-2xl border border-paper-100/10 bg-pine-950/35 px-4 py-3 text-paper-50 placeholder:text-paper-100/35 focus:border-copper-400/40" placeholder="Any preference (window seat, birthday, etc.)" />
          </label>
        </div>

        <div class="mt-5 flex items-center gap-3">
          <button data-magnetic="true" type="submit" class="btn-primary">
            Submit Request
          </button>
          <p id="reserveMsg" class="text-sm text-paper-100/60"></p>
        </div>
      </form>
    </div>
  </div>

  <script>
    const form = document.getElementById('reserveForm');
    const msg = document.getElementById('reserveMsg');

    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      if (msg) {
        msg.textContent = 'Request saved (demo). Connect this form to WhatsApp/email later.';
      }
      form.reset();
    });
  </script>
</section>
