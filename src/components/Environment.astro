---
const images = [
  { src: '/assets/env/pexels-restaurant-19456977.jpg', alt: 'Cozy fine dining interior' },
  { src: '/assets/env/pexels-dhaka-interior-33772745.jpg', alt: 'Elegant dining seating' },
  { src: '/assets/env/pexels-candlelit-table-30420679.jpg', alt: 'Candlelit table setting' },
  { src: '/assets/env/unsplash-cozy-dining-PGbiUKbJpoM.jpg', alt: 'Warm ambience seating' },
  { src: '/assets/env/unsplash-dim-dining-TlScs8TkNG4.jpg', alt: 'Dimly lit cozy dining' },
  { src: '/assets/env/unsplash-candles-table-PyTBsZMWSJI.jpg', alt: 'Candles and table decor' },
  { src: '/assets/env/unsplash-ambient-purple-JiAzP7vKX7g.jpg', alt: 'Ambient lighting lounge seating' },
  { src: '/assets/env/unsplash-table-menu-hOzvua4HySw.jpg', alt: 'Table and menu closeup' }
];
---
<section id="environment" class="py-16 lg:py-24">
  <div class="mx-auto max-w-6xl px-4 lg:px-6">
    <div class="reveal flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <p class="kicker">ENVIRONMENT</p>
        <h2 class="mt-3 font-display text-2xl font-semibold text-paper-50 sm:text-3xl">A cozy fine-dining atmosphere</h2>
        <p class="mt-2 max-w-2xl text-sm text-paper-100/70 sm:text-base">
          Warm lighting, minimal elegance, and comfort-first seating — designed for premium lounge dining.
        </p>
      </div>
      <div class="hidden rounded-2xl border border-paper-100/10 bg-pine-950/25 px-4 py-3 text-sm text-paper-100/70 backdrop-blur-md sm:block">
        Quiet • Warm • Premium
      </div>
    </div>

    <div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4" data-stagger>
      {images.map((img, idx) => (
        <figure class={`reveal hover-lift hover-glow group relative overflow-hidden rounded-3xl border border-paper-100/10 bg-pine-950/20 ${idx === 0 ? 'lg:col-span-2 lg:row-span-2' : ''}`}> 
          <img
            src={img.src}
            alt={img.alt}
            loading="lazy"
            class={`img-zoom h-full w-full object-cover ${idx === 0 ? 'min-h-[360px] lg:min-h-[520px]' : 'h-[220px]'}`}
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-black/0 opacity-90" />
          <figcaption class="absolute bottom-0 left-0 right-0 p-4">
            <div class="inline-flex items-center gap-2 rounded-full border border-copper-400/20 bg-pine-950/35 px-3 py-1 text-xs text-paper-100/80 backdrop-blur-md">
              <span class="h-1.5 w-1.5 rounded-full bg-copper-400" />
              Environment
            </div>
          </figcaption>
        </figure>
      ))}
    </div>
  </div>
</section>
